# Supabase PostgreSQL connection string for Railway (Session Pooler, IPv4 compatible)
# Get this exact value from Supabase Dashboard > Connect > Session pooler
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres

# Resend email API key (https://resend.com)
RESEND_API_KEY=re_...

# The "from" address for confirmation emails (must be a verified domain in Resend)
FROM_EMAIL=orders@lokucaters.com

# Optional reply-to address for customer responses
REPLY_TO_EMAIL=you@example.com

# Toggle email sending without changing order behavior
EMAIL_ENABLED=true

# Resend webhook signing secret (Svix)
RESEND_WEBHOOK_SECRET=whsec_...

# Email queue settings (worker)
EMAIL_QUEUE_ENABLED=true
EMAIL_SEND_RATE_PER_SECOND=1
EMAIL_MAX_ATTEMPTS=8
EMAIL_LOCK_SECONDS=300
EMAIL_POLL_INTERVAL_MS=250

# Your deployed frontend URL (used for CORS)
FRONTEND_URL=https://your-frontend.railway.app

# Supabase JWT secret (legacy HS256 projects only, also used by DEV_MODE local login flow)
# Modern Supabase projects with RS256/ES256 do not require this for admin token verification
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
